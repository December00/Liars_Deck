<Window x:Class="Liars_deck.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Liars_deck"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="GameWindow" Height="1080" Width="1920">
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <ImageBrush ImageSource="/Покер фон стола в зеленый цвет_ _ Премиум векторы.jfif"/>
        </Grid.Background>
        <Grid VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,10,0,0">
            <Rectangle 
                    Height="50" 
                    Width="360"
                    RadiusY="10"
                    RadiusX="10" 
                    Fill="#FF424242">
                <Rectangle.Effect>
                    <DropShadowEffect Color="Black" Direction="320" 
                            ShadowDepth="10" BlurRadius="20" Opacity="0.7"/>
                </Rectangle.Effect>
            </Rectangle>
            <TextBox x:Name="IPTextBox" 
                HorizontalAlignment="Left"
                TextWrapping="Wrap" 
                Width="240" 
                Background="Transparent" 
                Foreground="White" 
                Height="50" 
                BorderThickness="0"
                Margin="60,30,10,0" FontFamily="Arial" FontSize="18"/>
            <Image x:Name="Enter" 
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="0, 24, 15, 0"
                Source="/Liars_deck;component/resources/enter.png"
                Width="32" 
                Height="32"
                Stretch="Uniform"
                Cursor="Hand"
                MouseDown="Enter_MouseDown"/>
            <Image x:Name="Exit" 
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="10,24,0,0"
                Source="/Liars_deck;component/resources/exit.png"
                Width="32" 
                Height="32"
                Stretch="Uniform"
                Cursor="Hand"
                MouseDown="Exit_MouseDown"/>
        </Grid>
        
    </Grid>
</Window>
